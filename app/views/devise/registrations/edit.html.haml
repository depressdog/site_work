%h1
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, class: 'ui form' }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .three.fields
    .field
      = f.label :phonenumber
      = f.text_field :phonenumber
    .field
      = f.label :username
      = f.text_field :username
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: "email"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
  .two.fields
    .field
      = f.label :education
      %br/
      = f.text_field :education
    .field
      = f.label :age
      %br/
      = f.text_field :age
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .two.fields
    .field
      = f.label :video_url
      = f.text_field :video_url
    .field
      = f.file_field :avatar

  .two.fields
    .field
      = f.label :password
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, autocomplete: "new-password"
      - if @minimum_password_length
        %br/
        %em
          = @minimum_password_length
          characters minimum
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, autocomplete: "current-password"
  .ui.buttons
    = f.submit "Update", class: "ui button green"
    = link_to "Back", :back, class: "ui button"
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui button red"}

