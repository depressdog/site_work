      = f.file_field :image7
    .field
      = f.label :image8
      = f.file_field :image8
    .field
      = f.label :image9
      = f.file_field :image9
    .field
      = f.label :image10
      = f.file_field :image10
  = f.submit "submit", class: 'ui button green'
