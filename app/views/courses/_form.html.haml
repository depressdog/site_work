  .two.fields
    .grouped.fields
      %p cat
      -#- @categories.each_with_index  do |category, index|
      -#  .field
      -#    .ui
      -#      = f.radio_button(:category_id, category.id)
      -#      = f.label(:category_id, category.name)
      -#      - if category.id === index
      -#        1
      -#      - else
      -#        = category.id
      -#- Subcategory.all.each do |subcategory|
      -#  .field
      -#    .ui
      -#      = f.radio_button(:subcategory_id, subcategory.id)
      -#      = f.label(:subcategory_id, subcategory.name)
      = f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category"}
      = f.collection_select :subcategory_id, Subcategory.all, :id, :name, {prompt: "Choose a subcategory"}


    .field.required
      -#= f.label :subcategory_id
      -#= f.collection_select :subcategory_id, Subcategory.find(params[category_id]).order(:name), :id, :name, { include_blank: true}

  .three.fields
    .field
      = f.label :c_username
      - if @course.c_username.present?
        = f.text_field :c_username, value: @course.c_username
      - else
        = f.text_field :c_username, value: current_user.username
    .field
      = f.label :c_phone
      - if @course.c_phone.present?
        = f.text_field :c_phone, value: @course.c_phone
      - else
        = f.text_field :c_phone, value: current_user.phonenumber
    .field
      = f.label :c_email
      - if @course.c_email.present?
        = f.text_field :c_email, value: @course.c_email
      - else
        = f.text_field :c_email, value: current_user.email
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :c_education
    - if @course.c_education.present?
      = f.text_field :c_education, value: @course.c_education
    - else
      = f.text_field :c_education, value: current_user.education
  .field
    = f.label :c_age
    - if @course.c_age.present?
      = f.text_field :c_age, value: @course.c_age
    - else
      = f.text_field :c_age, value: current_user.age
  .field
    = f.label :c_video_url
    - if @course.c_video_url.present?
      = f.text_field :c_video_url, value: @course.c_video_url
    - else
      = f.text_field :c_video_url, value: current_user.video_url
  .field
    = f.label :body
    - if @course.body.present?
      = f.text_area :body, value: @course.body
    - else
      = f.text_area :body, value: current_user.body
  .five.fields
    .field
      = f.label :image1
      = f.file_field :image1
    .field
      = f.label :image2
      = f.file_field :image2
    .field
      = f.label :image3
      = f.file_field :image3
    .field
      = f.label :image4
      = f.file_field :image4
    .field
      = f.label :image5
