.ui.segment
  = form_tag courses_path, :method => 'get', from: "search-form", class: 'ui form' do
    .fields
      .fourteen.wide.field
        .ui.icon.input
          = text_field_tag :c_username, params[:c_username], class: 'prompt'
      .two.wide.field
        = submit_tag "submit", :name => nil, class: 'ui button inverted blue'
    .fields
      .field
        = select_tag "category_id", options_from_collection_for_select(@categories, "id", "name", params[:category_id]), include_blank: "категория"

